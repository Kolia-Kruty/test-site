@inherits Umbraco.Web.Mvc.UmbracoViewPage

<section class="container mb-3 bg-light border">

    @using (Html.BeginUmbracoForm("SubmitForm", "ContactSurface", Model, new { @class = "row g-3 needs-validation pb-3 pt-3" }))
    {
        @Html.AntiForgeryToken()

        <h3 class="text-center">Contact form</h3>
        <div class="col-12 col-sm-6 position-relative">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control " id="name" name="Name" required placeholder="Enter name">
        </div>

        <div class="col-sm-6 col-12 position-relative">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control " id="email" name="Email" required placeholder="Enter email">
        </div>

        <div class="mb-1">
            <label for="textarea" class="form-label">Textarea</label>
            <textarea class="form-control" rows="5" id="textarea" name="Message" placeholder="Enter message"
                      required></textarea>
        </div>

        <div class="col-12 d-flex flex-column flex-sm-row-reverse">
            <button class="btn btn-primary " type="submit">Send message</button>
        </div>
    }

</section>